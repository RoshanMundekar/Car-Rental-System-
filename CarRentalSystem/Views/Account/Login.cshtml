@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center animate-up">
    <div class="col-md-6 col-lg-4">
        <div class="premium-card mt-5">
            <div class="text-center mb-4">
                <div class="mb-3 d-inline-block p-4 rounded-circle bg-success bg-opacity-10">
                    <i class="bi bi-shield-lock text-success display-4"></i>
                </div>
                <h2 class="fw-bold mb-1">Welcome <span class="text-success">Back</span></h2>
                <p class="text-secondary small">Enter your credentials to access your account.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-4 small mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-4">
                    <label class="form-label text-secondary fw-semibold small text-uppercase">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-secondary">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input name="email" class="form-control border-start-0 ps-0" type="email" placeholder="name@example.com" required />
                    </div>
                </div>
                <div class="mb-5">
                    <div class="d-flex justify-content-between">
                        <label class="form-label text-secondary fw-semibold small text-uppercase">Password</label>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-secondary">
                            <i class="bi bi-key"></i>
                        </span>
                        <input name="password" class="form-control border-start-0 ps-0" type="password" placeholder="••••••••" required />
                    </div>
                </div>
                <button type="submit" class="btn-premium w-100 py-3 mb-4">Sign In</button>
            </form>

            <div class="text-center mt-2">
                <p class="text-secondary small mb-0">Don't have an account? <a asp-action="Register" class="text-success fw-bold text-decoration-none hover-link">Create Account</a></p>
            </div>
        </div>
    </div>
</div>
