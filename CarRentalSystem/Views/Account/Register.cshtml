@model CarRentalSystem.Models.User

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center animate-up">
    <div class="col-md-8 col-lg-5">
        <div class="premium-card mt-5">
            <div class="text-center mb-4">
                <div class="mb-3 d-inline-block p-4 rounded-circle bg-primary bg-opacity-10">
                    <i class="bi bi-person-plus text-primary display-4"></i>
                </div>
                <h2 class="fw-bold mb-1">Create <span class="text-primary">Account</span></h2>
                <p class="text-secondary small">Join our community and start your journey today.</p>
            </div>

            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-4 small mb-4"></div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-12">
                        <label asp-for="Name" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-secondary">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="John Doe" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Email" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-secondary">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-secondary">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-secondary">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            <select asp-for="Role" class="form-select border-start-0 ps-0">
                                <option value="User">Regular User</option>
                                <option value="Admin">Administrator</option>
                            </select>
                        </div>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn-premium w-100 py-3">Get Started</button>
                    <div class="text-center mt-2">
                        <p class="text-secondary small mb-0">Already have an account? <a asp-action="Login" class="text-primary fw-bold text-decoration-none hover-link">Sign In</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
