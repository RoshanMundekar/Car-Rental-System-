@model CarRentalSystem.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="row justify-content-center animate-up">
    <div class="col-md-8 col-lg-6 text-center">
        <div class="premium-card py-5">
            <div class="mb-4">
                <i class="bi bi-patch-check-fill text-success" style="font-size: 5rem;"></i>
            </div>
            
            <h1 class="fw-bold mb-3">Booking Requested!</h1>
            <p class="text-secondary mb-5 px-md-5">We've received your request for the <strong>@Model.Car?.Brand @Model.Car?.Model</strong>. Please complete the payment to confirm your reservation.</p>
            
            <div class="text-start p-4 rounded-4 bg-white bg-opacity-5 mb-5 mx-md-4">
                <h5 class="fw-bold mb-4 border-bottom border-secondary pb-3">Order Summary</h5>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Booking ID</span>
                    <span class="fw-semibold">#@Model.Id</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Vehicle</span>
                    <span class="fw-semibold">@Model.Car?.Brand @Model.Car?.Model</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Rental Period</span>
                    <span class="fw-semibold small">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</span>
                </div>
                <hr class="border-secondary my-4">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h5 fw-bold mb-0">Total Amount</span>
                    <span class="h4 fw-bold text-primary mb-0">@Model.TotalAmount.ToString("C")</span>
                </div>
            </div>
            
            <div class="d-grid gap-3 px-md-4">
                <a asp-controller="Payments" asp-action="Process" asp-route-bookingId="@Model.Id" class="btn-premium py-3">Proceed to Payment</a>
                <a asp-action="MyBookings" class="btn btn-outline-secondary rounded-pill py-2">View My Bookings</a>
            </div>
        </div>
    </div>
</div>
