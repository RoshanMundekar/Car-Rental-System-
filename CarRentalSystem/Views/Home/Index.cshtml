@{
    ViewData["Title"] = "Home Page";
}

<div class="row min-vh-100 align-items-center">
    <div class="col-md-7 animate-up">
        <h1 class="display-1 fw-bold mb-4">Ride in <br><span class="text-primary">Style & Comfort</span></h1>
        <p class="lead text-secondary mb-5">Experience the ultimate freedom with our premium fleet. From sleek sedans to rugged SUVs, find the perfect companion for your next journey.</p>
        <div class="d-flex gap-3">
            <a href="/Cars" class="btn-premium">Explore Fleet</a>
            <a href="/Account/Register" class="btn btn-outline-light btn-lg px-4 rounded-pill">Get Started</a>
        </div>
    </div>
    <div class="col-md-5 d-none d-md-block animate-up" style="animation-delay: 0.2s;">
        <div class="premium-card text-center overflow-hidden p-0">
             <img src="https://images.unsplash.com/photo-1503376780353-7e6692767b70?auto=format&fit=crop&w=800" class="img-fluid" alt="Hero Car" style="transform: scale(1.1); filter: brightness(0.8);">
             <div class="p-4">
                 <h5>Ready to Drive?</h5>
                 <p class="small text-muted">Over 500+ premium cars waiting for you.</p>
             </div>
        </div>
    </div>
</div>
