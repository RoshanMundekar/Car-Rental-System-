@model IEnumerable<CarRentalSystem.Models.Car>

@{
    ViewData["Title"] = "Manage Cars";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 animate-up">
    <div>
        <h1 class="fw-bold mb-1">Fleet <span class="text-info">Management</span></h1>
        <p class="text-secondary text-muted">View, edit, and maintain your vehicle inventory.</p>
    </div>
    <div class="mt-3 mt-md-0">
        <a asp-action="Create" class="btn-premium d-inline-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i> Add New Vehicle
        </a>
    </div>
</div>

<div class="premium-card pb-1 animate-up">
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle mb-0">
            <thead class="text-secondary small text-uppercase">
                <tr>
                    <th class="ps-4">Vehicle Details</th>
                    <th>Price/Day</th>
                    <th>Availability</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td class="ps-4 py-3">
                            <div class="d-flex align-items-center">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://images.unsplash.com/photo-1494976388531-d1058494cdd8?auto=format&fit=crop&w=100" : item.ImageUrl)" 
                                     class="rounded-3 me-3" style="width: 60px; height: 40px; object-fit: cover; border: 1px solid rgba(255,255,255,0.1);">
                                <div>
                                    <div class="fw-bold text-white">@item.Brand</div>
                                    <div class="small text-secondary">@item.Model</div>
                                </div>
                            </div>
                        </td>
                        <td class="fw-bold text-primary">@item.PricePerDay.ToString("C")</td>
                        <td>
                            <span class="badge @(item.IsAvailable ? "bg-success" : "bg-danger") bg-opacity-10 @(item.IsAvailable ? "text-success" : "text-danger") border @(item.IsAvailable ? "border-success" : "border-danger") rounded-pill px-3 py-2 small">
                                <i class="bi @(item.IsAvailable ? "bi-check-circle-fill" : "bi-x-circle-fill") me-1"></i>
                                @(item.IsAvailable ? "Live" : "Inactive")
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning border-0 rounded-circle me-1" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info border-0 rounded-circle me-1" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger border-0 rounded-circle" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
