@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Add New Car";
}

<div class="row justify-content-center animate-up">
    <div class="col-md-8 col-lg-6">
        <div class="premium-card">
            <div class="text-center mb-4">
                <div class="mb-3 d-inline-block p-4 rounded-circle bg-success bg-opacity-10">
                    <i class="bi bi-plus-circle text-success display-4"></i>
                </div>
                <h2 class="fw-bold mb-1">Add New <span class="text-success">Vehicle</span></h2>
                <p class="text-secondary small">Register a new car into the rental fleet system.</p>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-4 small mb-4"></div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <input asp-for="Brand" class="form-control" placeholder="Toyota" />
                        <span asp-validation-for="Brand" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <input asp-for="Model" class="form-control" placeholder="Camry" />
                        <span asp-validation-for="Model" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PricePerDay" class="form-label text-secondary fw-semibold small text-uppercase">Daily Rate ($)</label>
                        <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" placeholder="49.99" />
                        <span asp-validation-for="PricePerDay" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ImageUrl" class="form-label text-secondary fw-semibold small text-uppercase">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>
                    <div class="col-12 mt-4">
                        <div class="form-check form-switch p-3 rounded-4 bg-white bg-opacity-5 d-flex align-items-center border border-white border-opacity-10">
                            <input asp-for="IsAvailable" class="form-check-input ms-0 me-3 mt-0" type="checkbox" style="width: 2.8rem; height: 1.4rem;" checked>
                            <label asp-for="IsAvailable" class="form-check-label text-white fw-semibold">Initially Available for Rent</label>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-3 pt-3">
                    <button type="submit" class="btn-premium w-100 py-3">Register Vehicle</button>
                    <a asp-action="Manage" class="btn btn-outline-secondary rounded-pill py-2">Discard & Back to Fleet</a>
                </div>
            </form>
        </div>
    </div>
</div>
