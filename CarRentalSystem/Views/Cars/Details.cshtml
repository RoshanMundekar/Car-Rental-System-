@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Vehicle Details - " + Model.Brand + " " + Model.Model;
}

<div class="row justify-content-center animate-up">
    <div class="col-lg-10 col-xl-8">
        <div class="premium-card p-0 overflow-hidden">
            <div class="row g-0">
                <div class="col-md-6">
                    <div class="h-100 position-relative" style="min-height: 400px;">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://images.unsplash.com/photo-1494976388531-d1058494cdd8?auto=format&fit=crop&w=800" : Model.ImageUrl)" 
                             class="h-100 w-100" style="object-fit: cover; position: absolute; top:0; left:0;">
                        <div class="position-absolute top-0 start-0 m-4">
                            <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger") bg-opacity-75 backdrop-blur rounded-pill px-3 py-2">
                                <i class="bi @(Model.IsAvailable ? "bi-check-circle-fill" : "bi-x-circle-fill") me-1"></i>
                                @(Model.IsAvailable ? "Available Now" : "Currently Rented")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 p-5 d-flex flex-column">
                    <div class="mb-auto">
                        <span class="text-secondary small fw-bold text-uppercase tracking-widest d-block mb-1">Premium Collection</span>
                        <h1 class="display-5 fw-bold text-white mb-2">@Model.Brand <span class="text-primary">@Model.Model</span></h1>
                        <hr class="border-secondary opacity-25 mb-4" />
                        
                        <div class="d-flex align-items-baseline mb-4">
                            <span class="display-4 fw-bold text-primary">@Model.PricePerDay.ToString("C")</span>
                            <span class="text-secondary ms-2">/ per day</span>
                        </div>

                        <p class="text-secondary mb-5">Experience the ultimate comfort and performance with this @Model.Brand. Our vehicles are meticulously maintained to ensure the highest standards of safety and luxury for your journey.</p>
                    </div>

                    <div class="d-grid gap-3">
                        @if (Model.IsAvailable) {
                            <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@Model.Id" class="btn-premium py-3 text-center fs-5">Reserve This Vehicle</a>
                        } else {
                            <button class="btn btn-secondary py-3 rounded-4 opacity-75" disabled>Currently Unavailable</button>
                        }
                        
                        <div class="d-flex gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-4 py-2 flex-grow-1">
                                <i class="bi bi-arrow-left me-2"></i>Back to Fleet
                            </a>
                            @if (Context.Session.GetString("UserRole") == "Admin") {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning rounded-4 py-2 px-4" title="Edit Vehicle">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
