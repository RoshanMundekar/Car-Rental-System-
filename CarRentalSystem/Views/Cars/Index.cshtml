@model IEnumerable<CarRentalSystem.Models.Car>

@{
    ViewData["Title"] = "Browse Cars";
}

<div class="mb-5 animate-up">
    <h1 class="fw-bold">Available <span class="text-primary">Fleet</span></h1>
    <p class="text-muted text-secondary">Choose from our wide range of luxury and economic vehicles.</p>
</div>

<div class="row g-4 mb-5">
    @foreach (var item in Model) {
        <div class="col-md-6 col-lg-4 animate-up">
            <div class="premium-card h-100 d-flex flex-column">
                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://images.unsplash.com/photo-1494976388531-d1058494cdd8?auto=format&fit=crop&w=400" : item.ImageUrl)" 
                     class="car-image mb-3" alt="@item.Brand @item.Model">
                
                <h4 class="fw-bold mb-1">@item.Brand @item.Model</h4>
                <p class="text-primary fw-bold mb-3">@item.PricePerDay.ToString("C") / day</p>
                
                <div class="mt-auto pt-3 border-top border-secondary">
                    @if (item.IsAvailable) {
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Available</span>
                        </div>
                        <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@item.Id" class="btn-premium w-100 text-center">Book Now</a>
                    } else {
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i> Rented</span>
                        </div>
                        <button class="btn btn-secondary w-100 rounded-pill" disabled>Not Available</button>
                    }
                </div>
            </div>
        </div>
    }
</div>
