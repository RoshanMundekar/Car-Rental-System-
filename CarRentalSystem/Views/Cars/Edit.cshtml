@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<div class="row justify-content-center animate-up">
    <div class="col-md-8 col-lg-6">
        <div class="premium-card">
            <div class="text-center mb-4">
                <div class="mb-3 d-inline-block p-4 rounded-circle bg-warning bg-opacity-10">
                    <i class="bi bi-pencil-square text-warning display-4"></i>
                </div>
                <h2 class="fw-bold mb-1">Edit <span class="text-warning">Vehicle</span></h2>
                <p class="text-secondary small">Update system details for <strong>@Model.Brand @Model.Model</strong>.</p>
            </div>

            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-4 small mb-4"></div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <input asp-for="Brand" class="form-control" placeholder="Tesla" />
                        <span asp-validation-for="Brand" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label text-secondary fw-semibold small text-uppercase"></label>
                        <input asp-for="Model" class="form-control" placeholder="Model S" />
                        <span asp-validation-for="Model" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="PricePerDay" class="form-label text-secondary fw-semibold small text-uppercase">Daily Rental Rate</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-secondary">$</span>
                            <input asp-for="PricePerDay" class="form-control border-start-0 ps-0" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="PricePerDay" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="ImageUrl" class="form-label text-secondary fw-semibold small text-uppercase">Preview Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://unsplash.com/..." />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>
                    <div class="col-12 mt-4">
                        <div class="form-check form-switch p-3 rounded-4 bg-white bg-opacity-5 d-flex align-items-center">
                            <input asp-for="IsAvailable" class="form-check-input ms-0 me-3 mt-0" type="checkbox" style="width: 3rem; height: 1.5rem;">
                            <label asp-for="IsAvailable" class="form-check-label text-white fw-semibold">Mark as Available for Rent</label>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-3 pt-3">
                    <button type="submit" class="btn-premium w-100 py-3">Commit Changes</button>
                    <a asp-action="Manage" class="btn btn-outline-secondary rounded-pill py-2">Discard & Back to Fleet</a>
                </div>
            </form>
        </div>
    </div>
</div>
